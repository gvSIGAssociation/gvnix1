<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
	<gvnix>
		<repositories>
			<repository>
				<id>gvNIX Add-on repository</id>
				<name>gvNIX Add-on repository</name>
				<url>https://gvnix.googlecode.com/svn/repo</url>
			</repository>
		</repositories>
		<properties>
			<cxf.version>2.7.3</cxf.version>
			<gvnix.version>${gvnix.version}</gvnix.version>
		</properties>
		<dependencies>
			<dependency>
				<groupId>org.gvnix</groupId>
				<artifactId>org.gvnix.addon.gva.security.annotations</artifactId>
				<version>${gvnix.version}</version>
				<type>jar</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-ws-security</artifactId>
				<version>${cxf.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-frontend-jaxws</artifactId>
				<version>${cxf.version}</version>
			</dependency>
			<dependency>
				<groupId>org.gvnix</groupId>
				<artifactId>org.gvnix.service.roo.addon.annotations</artifactId>
				<version>${gvnix.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-transports-http</artifactId>
				<version>${cxf.version}</version>
			</dependency>
		</dependencies>
	</gvnix>
</configuration>