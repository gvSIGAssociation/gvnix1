// Instalar artefactos de patrones
web mvc pattern setup

// Añadir página con patrón registro para la gestión de productos 
web mvc pattern master --class ~.web.ProductoController --name ficha --type register

// Añadir página con patrón tabular para la gestión de productos
web mvc pattern master --class ~.web.ClienteController --name clientes --type tabular

// Añadir página con patrón registro para la gestión de pedidos 
web mvc pattern master --class ~.web.PedidoController --name pedido --type register

// Añadir página con patrón tabular para la gestión de lineas de pedido
web mvc pattern detail --class ~.web.PedidoController --name pedido --field lineasPedido --type tabular

// Hacer un Maven > Update Project Configuration y visualizar cambios
// Reiniciar el servidor de aplicaciones

backup
